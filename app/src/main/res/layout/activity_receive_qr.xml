<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ReceiveQrActivity"
    android:background="@color/black"
    android:paddingHorizontal="25dp"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/tvOppoPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvReceive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Receive"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvOppoPay"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/bank_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ABC BANK \nLOOI YU HENG"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/ivReceiveQr"
        tools:layout_editor_absoluteX="25dp" />

    <ImageView
        android:id="@+id/ivReceiveQr"
        android:layout_width="wrap_content"
        android:layout_height="350dp"
        android:src="@drawable/receive_qr"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvReceive" />

</androidx.constraintlayout.widget.ConstraintLayout>