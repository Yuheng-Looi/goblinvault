<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_dark"
    tools:context=".LoginFragment">

    <TextView
        android:id="@+id/goblinvaulttext"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        android:layout_marginTop="60dp"
        android:background="@color/primary_dark"
        android:fontFamily="@font/judsonitalic"
        android:paddingStart="120dp"
        android:paddingTop="80dp"
        android:paddingBottom="20dp"
        android:text="GoblinVault"
        android:textAlignment="center"
        android:textAllCaps="false"
        android:textColor="@color/primary_white"
        android:textDirection="inherit"
        android:textIsSelectable="false"
        android:textSize="44sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="RtlCompat" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="117dp"
        android:layout_height="100dp"
        android:layout_marginTop="108dp"
        android:src="@drawable/logo_goblinvault"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.146"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/CNABtn"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:background="@drawable/rounded_rect_pri_green"
        android:textAlignment="center"
        android:paddingTop="10dp"
        android:text="Sign Up"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/BtnLogin"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/BtnLogin"
        app:layout_constraintTop_toBottomOf="@+id/BtnLogin"
        app:layout_constraintVertical_bias="0.081" />

    <EditText
        android:id="@+id/LoginEmail"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="44dp"
        android:background="@drawable/rounder_rect_black"
        android:ems="10"
        android:hint="Email Address"
        android:inputType="text"
        android:padding="10dp"
        android:paddingStart="50dp"
        android:textColorHint="@color/grey_600"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/goblinvaulttext" />

    <TextView
        android:id="@+id/TVForgotPassword"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:padding="8dp"
        android:text="Forgot password?"
        android:textAllCaps="false"
        android:textColor="@color/grey_600"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="@+id/LoginPass"
        app:layout_constraintTop_toBottomOf="@+id/LoginPass" />

    <TextView
        android:id="@+id/BtnLogin"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginStart="148dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="148dp"
        android:background="@drawable/rounded_rect_pri_green"
        android:paddingTop="10dp"
        android:text="Log in"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/TVForgotPassword" />

    <EditText
        android:id="@+id/LoginPass"
        android:layout_width="280dp"
        android:layout_height="48dp"
        android:layout_marginTop="19dp"
        android:background="@drawable/rounder_rect_black"
        android:textColorHint="@color/grey_600"
        android:ems="10"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:paddingStart="50dp"
        android:textSize="14sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/LoginEmail" />

    <ToggleButton
        android:id="@+id/toggleButton"
        android:layout_width="30dp"
        android:layout_height="26dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="12dp"
        android:background="@drawable/toggle_button_background"
        android:textOff=""
        android:textOn=""
        app:layout_constraintEnd_toEndOf="@+id/LoginPass"
        app:layout_constraintTop_toTopOf="@+id/LoginPass" />

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/email"
        app:layout_constraintStart_toStartOf="@+id/LoginEmail"
        app:layout_constraintTop_toTopOf="@+id/LoginEmail" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="12dp"
        android:src="@drawable/lock"
        app:layout_constraintStart_toStartOf="@+id/LoginPass"
        app:layout_constraintTop_toTopOf="@+id/LoginPass"
        />

</androidx.constraintlayout.widget.ConstraintLayout>