<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:layout_height="match_parent"
tools:context=".DestForgotPassword">

<TextView
    android:id="@+id/goblinvaulttext"
    android:layout_width="match_parent"
    android:layout_height="190dp"
    android:background="@color/very_light_blue"
    android:fontFamily="@font/judsonitalic"
    android:gravity="bottom"
    android:paddingBottom="20dp"
    android:text="EcoHelper"
    android:textAlignment="center"
    android:textAllCaps="false"
    android:textColor="@color/black"
    android:textDirection="inherit"
    android:textIsSelectable="false"
    android:textSize="44sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.0"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent"
    tools:ignore="RtlCompat" />

<ImageView
    android:id="@+id/imageView6"
    android:layout_width="117dp"
    android:layout_height="100dp"
    android:layout_marginTop="16dp"
    android:src="@drawable/ecohelper_logo"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<EditText
    android:id="@+id/editTextText3"
    android:layout_width="319dp"
    android:layout_height="52dp"
    android:layout_marginStart="86dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="86dp"
    android:background="#D0E5F7"
    android:ems="10"
    android:hint="Enter email address"
    android:inputType="text"
    android:textAlignment="center"
    android:textColor="#190D0D"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView3" />

<TextView
    android:id="@+id/textView2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginStart="110dp"
    android:layout_marginTop="48dp"
    android:layout_marginEnd="110dp"
    android:text="FORGOT PASSWORD"
    android:textSize="22sp"
    android:textStyle="bold"
    android:textColor="#3F51B5"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/goblinvaulttext" />

<TextView
    android:id="@+id/textView3"
    android:layout_width="311dp"
    android:layout_height="wrap_content"
    android:layout_marginStart="44dp"
    android:layout_marginTop="16dp"
    android:layout_marginEnd="44dp"
    android:gravity="center"
    android:padding="8dp"
    android:fontFamily="@font/itimregular"
    android:text="Enter your email and we will send a reset password confirmation to your email"
    android:textAlignment="center"
    android:textAllCaps="false"
    android:textColor="#cf9393"
    android:textSize="15sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/imageView" />

<ImageView
    android:id="@+id/imageView"
    android:layout_width="85dp"
    android:layout_height="60dp"
    android:layout_marginStart="163dp"
    android:layout_marginTop="32dp"
    android:layout_marginEnd="163dp"
    android:background="#03A9F4"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/textView2"
    app:srcCompat="@android:drawable/stat_sys_warning" />

<Button
    android:id="@+id/BtnSubmit"
    android:layout_width="129dp"
    android:layout_height="54dp"
    android:layout_marginStart="141dp"
    android:layout_marginTop="44dp"
    android:layout_marginEnd="141dp"
    android:backgroundTint="#03A9F4"
    android:text="SUBMIT"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toBottomOf="@+id/editTextText3" />

<Button
    android:id="@+id/BtnBTL"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="47dp"
    android:backgroundTint="#03A9F4"
    android:text="Back to Login"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintHorizontal_bias="0.5"
    app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>