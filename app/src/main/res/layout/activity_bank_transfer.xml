<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BankTransferActivity"
    android:background="@color/black"
    android:paddingHorizontal="25dp"
    android:paddingTop="25dp">

    <TextView
        android:id="@+id/tvOppoPay"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/oppo_pay"
        android:textColor="#fff"
        android:textSize="30sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvTransfer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Transfer"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="5dp"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/tvOppoPay"
        app:layout_constraintStart_toStartOf="parent"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/tvTransfer"
        app:layout_constraintBottom_toBottomOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <TextView
                android:id="@+id/tvBank_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank"
                android:textColor="@color/white"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/etBank_transfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="e.g Public Bank"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/white"
                android:background="@drawable/underline_bg"
                android:paddingTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvBank_transfer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvBankAcc_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Account"
                android:textColor="@color/white"
                android:paddingTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etBank_transfer"/>

            <EditText
                android:id="@+id/etBankAcc_transfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="e.g 123456789"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/white"
                android:background="@drawable/underline_bg"
                android:paddingTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvBankAcc_transfer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvBankHolder_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bank Holder Name"
                android:textColor="@color/white"
                android:paddingTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etBankAcc_transfer"/>

            <EditText
                android:id="@+id/etBankHolder_transfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="e.g Tey Henry"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/white"
                android:background="@drawable/underline_bg"
                android:paddingTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvBankHolder_transfer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvAmount_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Amount (RM)"
                android:textColor="@color/white"
                android:paddingTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etBankHolder_transfer"/>

            <EditText
                android:id="@+id/etAmount_transfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="e.g 200"
                android:textColorHint="@android:color/darker_gray"
                android:textColor="@color/white"
                android:background="@drawable/underline_bg"
                android:paddingTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvAmount_transfer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <TextView
                android:id="@+id/tvReference_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reference"
                android:textColor="@color/white"
                android:paddingTop="20dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/etAmount_transfer"/>

            <EditText
                android:id="@+id/etReference_transfer"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:background="@drawable/underline_bg"
                android:paddingTop="5dp"
                app:layout_constraintTop_toBottomOf="@id/tvReference_transfer"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

            <Button
                android:id="@+id/btnTransfer_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Transfer"
                android:textAllCaps="false"
                android:layout_marginTop="10dp"
                app:layout_constraintTop_toBottomOf="@id/etReference_transfer"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>